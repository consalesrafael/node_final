<%- include ("../partials/header") %>

<style>
  /* Estilos específicos para o layout da página de registro */
  .register-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  .register-card {
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(44, 62, 80, 0.15);
    background-color: white;
    width: 100%;
    max-width: 450px; /* Um pouco mais largo para acomodar o formulário */
    border: none;
  }
  .register-card .form-control:focus {
    border-color: var(--cor-acento);
    box-shadow: 0 0 0 0.25rem rgba(26, 188, 156, 0.25);
  }
  .register-card .btn-success {
    /* O estilo já é herdado da folha de estilos principal */
    padding: 0.75rem;
    font-weight: bold;
  }
</style>

<body>
  <div class="register-container">
    <div class="register-card">
      <h3 class="text-center mb-4" style="color: var(--cor-principal);">Criar Conta</h3>
      <% if (typeof erro !== 'undefined' && erro) { %>
      <div class="alert alert-danger text-center" role="alert">
        <%= erro %>
      </div>
    <% } %>
      <form action="/createUser" method="POST">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome de usuario</label>
          <input type="text" class="form-control" id="nome" name="usuarioN" required placeholder="Seu usuario" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" class="form-control" id="email" name="emailN" required placeholder="Digite seu e-mail" />
        </div>
        <div class="mb-3">
          <label for="senha" class="form-label">Senha</label>
          <input type="password" class="form-control" id="senha" name="senhaN" required placeholder="Crie uma senha forte" />
        </div>
        <div class="d-grid gap-2 mt-4">
          <button type="submit" class="btn btn-success">Registrar</button>
          <a href="/" class="btn btn-outline-secondary">Já tenho conta</a>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>