<%- include("../partials/header") %>

<body>
  <%- include("../partials/navBar") %>

  <div class="container py-5">
    <h1 class="mb-5 text-center" style="color: var(--cor-principal);">Painel de Relatórios</h1>

    <div class="row g-5">

      <div class="col-lg-6">
        <div class="report-card">
          <h3><i class="bi bi-box-seam me-2"></i>Produtos Cadastrados</h3>
          <% if (produtos && produtos.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% produtos.forEach(produto => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong class="d-block"><%= produto.nome %></strong>
                    <small class="text-muted">Categoria: <%= produto.categoria %></small>
                  </div>
                  <span class="badge bg-primary rounded-pill"><%= produto.id %></span>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-center text-muted">Nenhum produto encontrado.</p>
          <% } %>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="report-card">
          <h3><i class="bi bi-people me-2"></i>Usuários Registrados</h3>
          <% if (usuarios && usuarios.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% usuarios.forEach(usuario => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong class="d-block"><%= usuario.nome %></strong>
                    <small class="text-muted"><%= usuario.email %></small>
                  </div>
                  <span class="badge <%= usuario.role === 'adm' ? 'bg-danger' : 'bg-secondary' %>">
                    <%= usuario.role %>
                  </span>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-center text-muted">Nenhum usuário encontrado.</p>
          <% } %>
        </div>
      </div>

    </div>
  </div>

  <%- include("../partials/footer") %>
</body>
</html>