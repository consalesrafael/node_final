<%- include ("partials/header") %>

<style>
  /* Estilos específicos para o layout da página de login */
  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .login-card {
    padding: 2.5rem;
    border-radius: 15px; /* Usa o mesmo raio dos outros cards */
    box-shadow: 0 10px 30px rgba(44, 62, 80, 0.15);
    background-color: white;
    width: 100%;
    max-width: 420px;
    border: none;
  }
  .login-card .form-control:focus {
    border-color: var(--cor-acento);
    box-shadow: 0 0 0 0.25rem rgba(26, 188, 156, 0.25);
  }
  .login-card .btn-primary {
    background-color: var(--cor-principal);
    border-color: var(--cor-principal);
    padding: 0.75rem;
  }
  .login-card .btn-primary:hover {
    background-color: var(--cor-secundaria);
    border-color: var(--cor-secundaria);
  }
  .login-card .forgot-password-link {
    color: var(--cor-secundaria);
    text-decoration: none;
    transition: color 0.2s;
  }
  .login-card .forgot-password-link:hover {
    color: var(--cor-acento);
  }
</style>

<body>
  <div class="login-container">
    <div class="login-card">
      <h3 class="text-center mb-4" style="color: var(--cor-principal);">Login</h3>
      
      <% if (typeof erro !== 'undefined' && erro) { %>
        <div class="alert alert-danger text-center">
          <%= erro %>
        </div>
      <% } %>

      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="usuario" class="form-label">Usuario</label>
          <input type="text" class="form-control" id="usuario" name="usuario" required placeholder="Digite seu usuario" />
        </div>
        <div class="mb-3">
          <label for="senha" class="form-label">Senha</label>
          <input type="password" class="form-control" id="senha" name="senha" required placeholder="Digite sua senha" />
        </div>
        <div class="d-grid gap-2 mt-4">
          <button type="submit" class="btn btn-primary fw-bold">Entrar</button>
          <a href="/screnCreate" class="btn btn-outline-secondary">Criar Usuário</a>
        </div>
        <p class="mt-3 text-center"><a href="#" class="forgot-password-link">Esqueceu a senha?</a></p>
      </form>
    </div>
  </div>
</body>
</html>